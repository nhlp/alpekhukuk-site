---
layout: layouts/base.njk
pageClass: light
---

{% block hero %}{% endblock %}

{% block content %}
<article class="wrap" itemscope itemtype="https://schema.org/Article" style="padding-top:40px">
  <header>
    <h1 itemprop="headline" class="section-title">{{ title }}</h1>
    <p class="muted" style="margin:6px 0 18px">
      {% if author %}{{ author }} · {% endif %}
      {{ date | dateTR }}
      {% if tags and tags.length %} · Etiketler:
        {% for t in tags %}
          <a href="/etiket/{{ t | url }}/" class="btn" style="margin-right:6px">{{ t }}</a>
        {% endfor %}
      {% endif %}
    </p>
    {% if hero %}
      <img src="{{ hero }}" alt="{{ title }}" style="border-radius:14px;margin:12px 0 20px">
    {% endif %}
  </header>

  <div class="prose" itemprop="articleBody">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
