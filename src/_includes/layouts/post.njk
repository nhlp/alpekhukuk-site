---
layout: layouts/base.njk
---

<header class="hero hero--post" style="--hero-bg: url('{{ hero or "/assets/og-hero.jpg" }}')">
  <div class="hero-inner">
    <h1>{{ title }}</h1>
    {% if description %}<p class="lead">{{ description }}</p>{% endif %}
  </div>
</header>

<section class="post-section">
  <article class="post">
    <div class="post-meta">
      <time datetime="{{ date | dateISO }}">{{ date | dateTR }}</time>
      {% if author %} Â· {{ author }}{% endif %}
      {% if tags %}
      <span class="tags">
        {% for t in tags %}<span class="tag">{{ t }}</span>{% endfor %}
      </span>
      {% endif %}
    </div>

    <div class="post-content">
      {{ content | safe }}
    </div>
  </article>
</section>
