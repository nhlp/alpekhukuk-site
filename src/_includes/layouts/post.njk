---
layout: layouts/base.njk
pageClass: light   # tüm makale sayfaları beyaz tema
---

{% block hero %}
<header class="hero hero--post" style="--hero-bg: url('{{ hero or "/assets/og-hero.jpg" }}')">
  <div class="hero-inner">
    <h1>{{ title }}</h1>
    {% if summary %}<p class="lead">{{ summary }}</p>{% endif %}
  </div>
</header>
{% endblock %}

{% block content %}
<article class="wrap" itemscope itemtype="https://schema.org/Article" style="padding-top:36px">
  <p class="muted" style="margin:0 0 14px">
    {% if author %}{{ author }} · {% endif %}
    {{ date | dateTR }}
    {% if tags and tags.length %} ·
      {% for t in tags %}
        <a href="/etiket/{{ t | url }}/" class="btn" style="margin-right:6px">{{ t }}</a>
      {% endfor %}
    {% endif %}
  </p>

  <div class="prose" itemprop="articleBody">
    {{ content | safe }}
  </div>
</article>
{% endblock %}
